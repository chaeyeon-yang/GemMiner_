<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuMypageFragment"
    android:orientation="vertical"
    android:padding="50sp">

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="프로필"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="24sp" />

    <View
        android:layout_marginTop="5sp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="80sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼식이"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"/>
    <View
        android:layout_marginTop="5sp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_height="2px"/>

    <TextView
        android:id="@+id/booking_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예매정보"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="10sp"/>
    <LinearLayout
        android:id="@+id/artistInfo"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/img_broccoli"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/broccoli"/>


        <TextView
            android:id="@+id/artistName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30sp"
            android:text="브로콜리 너마저"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/favorite_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아하는 아티스트"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="10sp"/>

    <LinearLayout
        android:id="@+id/artistInfo2"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/img_krr"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/krr"/>
        <TextView
            android:id="@+id/artistName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30sp"
            android:text="크르르"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/artistInfo3"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/img_namsaeng"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/namsaeng"/>
        <TextView
            android:id="@+id/artistName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30sp"
            android:text="남생"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>