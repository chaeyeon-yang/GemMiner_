<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketActivity"
    android:padding="50sp">

    <TextView
        android:id="@+id/basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="장바구니"
        android:textSize="24sp"
        android:textFontWeight="600"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/basketArtistImg"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/broccoli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basket" />

    <TextView
        android:id="@+id/basketArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="48dp"
        android:text="브로콜리 너마저"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/basketArtistImg"
        app:layout_constraintTop_toBottomOf="@+id/basket" />

    <TextView
        android:id="@+id/basketArtistCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:text="가격: 22000원"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/basketArtistImg"
        app:layout_constraintTop_toBottomOf="@+id/basketArtistName" />

    <Button
        android:id="@+id/ticketing"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="8dp"
        android:text="예매하기"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/basketArtistImg"
        app:layout_constraintTop_toBottomOf="@+id/basketArtistName" />


</androidx.constraintlayout.widget.ConstraintLayout>